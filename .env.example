# Social Media AI System - Environment Variables

# =============================================================================
# LLM APIs (REQUIRED)
# =============================================================================

# Google Gemini API (OBRIGATÓRIO - Gratuito)
# Obtenha em: https://aistudio.google.com/app/apikey
GOOGLE_API_KEY=your_google_gemini_api_key_here

# OpenAI API (OBRIGATÓRIO - Pago)
# Obtenha em: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# =============================================================================
# MCP INTEGRATIONS (OPTIONAL)
# =============================================================================

# Perplexity AI (OPCIONAL - Para pesquisa avançada)
# Obtenha em: https://www.perplexity.ai/settings/api
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# Evolution API - WhatsApp (OPCIONAL - Para envio automático)
# Configure sua instância Evolution API
EVOLUTION_API_URL=https://your-evolution-instance.com
EVOLUTION_API_KEY=your_evolution_api_key_here
EVOLUTION_INSTANCE_NAME=your_instance_name

# =============================================================================
# SYSTEM SETTINGS (OPTIONAL)
# =============================================================================

# Configurações de desenvolvimento
DEBUG=true
LOG_LEVEL=INFO

# Configurações de LLM
GEMINI_MODEL=gemini-1.5-flash
OPENAI_MODEL=gpt-4o-mini
TEMPERATURE=0.7
MAX_TOKENS=4096

# Configurações de timeout (segundos)
REQUEST_TIMEOUT=30
LLM_TIMEOUT=60

# =============================================================================
# RAG VISUAL SETTINGS (OPTIONAL)
# =============================================================================

# Configurações do sistema RAG
EMBEDDINGS_MODEL=text-embedding-3-small
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MAX_SEARCH_RESULTS=5

# =============================================================================
# OUTPUT SETTINGS (OPTIONAL)
# =============================================================================

# Configurações de saída
OUTPUT_DIR=output
SAVE_HISTORY=true
EXPORT_FORMAT=markdown

# Configurações de qualidade
MIN_CONTENT_LENGTH=100
MAX_RETRIES=3
QUALITY_THRESHOLD=0.8

# =============================================================================
# SOCIAL MEDIA SETTINGS (OPTIONAL)
# =============================================================================

# Instagram
INSTAGRAM_MAX_CAPTION=2200
INSTAGRAM_MAX_HASHTAGS=30
INSTAGRAM_OPTIMAL_HASHTAGS=15

# WhatsApp
WHATSAPP_MAX_MESSAGE=4096
WHATSAPP_OPTIMAL_LENGTH=300

# LinkedIn
LINKEDIN_MAX_POST=3000
LINKEDIN_OPTIMAL_LENGTH=1300

# =============================================================================
# AGENT SETTINGS (OPTIONAL)
# =============================================================================

# Configurações dos agentes
RESEARCHER_MAX_ITER=3
WRITER_MAX_ITER=2
VISUAL_MAX_ITER=2
EDITOR_MAX_ITER=2

# Configurações de aprovação
AUTO_APPROVE=false
APPROVAL_THRESHOLD=0.85
MAX_REVISION_CYCLES=3

# =============================================================================
# SECURITY SETTINGS (OPTIONAL)
# =============================================================================

# Configurações de segurança
RATE_LIMIT=10
CACHE_TTL=3600
ENCRYPT_OUTPUTS=false

# =============================================================================
# MONITORING & ANALYTICS (OPTIONAL)
# =============================================================================

# Configurações de monitoramento
ENABLE_ANALYTICS=true
TRACK_PERFORMANCE=true
SAVE_METRICS=true

# =============================================================================
# DEVELOPMENT SETTINGS (OPTIONAL)
# =============================================================================

# Modo de desenvolvimento
MOCK_MCP_TOOLS=false
MOCK_LLM_RESPONSES=false
ENABLE_VERBOSE_LOGGING=true

# Configurações de teste
RUN_TESTS_ON_START=false
VALIDATE_OUTPUTS=true
BENCHMARK_MODE=false

# =============================================================================
# NOTES
# =============================================================================

# REQUIRED APIs:
# 1. GOOGLE_API_KEY - Para agentes Pesquisador e Redator (Gemini Flash - Gratuito)
# 2. OPENAI_API_KEY - Para agentes Visual Designer e Editor (GPT-4o-mini - Pago)

# OPTIONAL APIs:
# 3. PERPLEXITY_API_KEY - Para pesquisa avançada via MCP
# 4. EVOLUTION_API_* - Para envio automático via WhatsApp

# MINIMAL SETUP (apenas chaves obrigatórias):
# GOOGLE_API_KEY=your_key
# OPENAI_API_KEY=your_key

# FULL SETUP (todas as funcionalidades):
# Configure todas as variáveis acima conforme necessário
